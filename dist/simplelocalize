INSTALLATION_DIR="$HOME/.simplelocalize"
INSTALLATION_PACKAGE_PATH=${INSTALLATION_DIR}/simplelocalize-cli.jar
DOWNLOAD_URL="https://github.com/simplelocalize/simplelocalize-cli/releases/download/0.1.0/simplelocalize.jar"
THIS_FILE=`basename "$0"`

mkdir -p ${INSTALLATION_DIR}

echo "--> [1/3] Setting up environment"
curl -s "https://get.sdkman.io" | bash > /dev/null
echo "--> [2/3] Setting up environment"
source "$HOME/.sdkman/bin/sdkman-init.sh" > /dev/null
echo "--> [3/3] Setting up environment"
sdk install java > /dev/null

java -version

if [[ ! -f ${INSTALLATION_PACKAGE_PATH} ]]; then
  echo "--> Downloading the latest SimpleLocalize-CLI image"
  curl -L ${DOWNLOAD_URL} --silent --output ${INSTALLATION_PACKAGE_PATH} > /dev/null
fi

java -cp ${INSTALLATION_PACKAGE_PATH} io.simplelocalize.cli.Main "$@"

exit $?
